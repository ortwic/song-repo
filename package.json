{
  "name": "song-repo",
  "description": "An app for musicians to keep an overview of their personal song repertoire.",
  "version": "0.4.0",
  "author": "OCSoft42",
  "private": true,
  "type": "module",
  "homepage": "https://song-repo.web.app",
  "keywords": [
    "music",
    "songbook",
    "repertoire",
    "musician",
    "blog",
    "performance",
    "setlist",
    "catalog",
    "sharing"
  ],
  "bugs": {
    "url": "https://github.com/ortwic/song-repo/issues"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite",
    "fix": "pnpm exec eslint --fix \"{,!(node_modules|public)/**/}*.{ts,svelte}\"",
    "format": "pnpm exec prettier --write \"{,!(node_modules|public)/**/}*.{ts,svelte}\"",
    "build": "vite build",
    "host:beta": "vite build && firebase --project song-repo deploy --only hosting:beta",
    "host:prod": "firebase --project song-repo deploy --only hosting:prod -f",
    "preview": "vite preview",
    "mobile": "ngrok http 5173",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test:unit": "vitest"
  },
  "devDependencies": {
    "@googlemaps/js-api-loader": "^1.16.6",
    "@sveltejs/vite-plugin-svelte": "^2.4.5",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/svelte": "^3.2.2",
    "@testing-library/user-event": "^14.4.3",
    "@tsconfig/svelte": "^3.0.0",
    "@types/color": "^3.0.3",
    "@types/google.maps": "^3.55.7",
    "@types/lodash": "^4.14.192",
    "@types/luxon": "^3.4.2",
    "@types/marked": "^5.0.0",
    "@types/tabulator-tables": "^6.2.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vitest/coverage-v8": "^0.32.2",
    "color": "^4.2.3",
    "eslint": "^8.44.0",
    "eslint-config-standard-with-typescript": "^36.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-svelte": "^2.32.2",
    "fecha": "^4.2.3",
    "firebase": "^9.23.0",
    "jsdom": "^22.1.0",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.5.30",
    "luxon": "^3.4.4",
    "marked": "^5.1.1",
    "nanoid": "^4.0.2",
    "prettier": "^3.0.0",
    "prettier-plugin-svelte": "^2.10.1",
    "rxfire": "^6.0.3",
    "rxjs": "^7.8.0",
    "simple-svelte-autocomplete": "^2.5.2",
    "svelte": "^4.2.0",
    "svelte-check": "^3.4.6",
    "svelte-eslint-parser": "^0.32.1",
    "svelte-i18n": "^3.7.0",
    "svelte-portal": "^2.2.1",
    "svelte-preprocess-sass": "^2.0.1",
    "svelte-spa-router": "^3.3.0",
    "tabulator-tables": "^6.2.1",
    "tslib": "^2.5.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.4",
    "vite-plugin-pwa": "^0.16.4",
    "vitest": "^0.33.0"
  }
}
