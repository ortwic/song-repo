rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow write: if request.auth != null;
      allow read: if true;
    }

    match /user/{uid}/songs/{docId} {
      allow write, delete: if request.auth.uid == request.resource.data.uid;
      allow read: if true;
    }
    
    match /feedback/{docId} {
      allow write: if true;
      allow read: if true;
    }
  }
}